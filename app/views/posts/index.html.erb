<p>
<% if logged_in? %>
<%= link_to "(#{current_user.name}) Log out", logout_path, method: "delete" %>
<% else %>
  <%= link_to 'Log in', login_path %>
<% end %>
</p>

<h1>Members Only Posts</h1>

<% @posts.each do |post| %>
  <% if logged_in? %>
    <p>
      <i>Posted by:
      <%= post.user.name %></i>
    </p>
  <% end %>
  <h3><%= post.title %></h3>
  <p><%= post.body %></p>
  <p>
    --------------------------------------------------------------------------
  </p>
<% end %>

<% if logged_in? %>
  <%= link_to "Create a Post", new_post_path %>
<% end %>